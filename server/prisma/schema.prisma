generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Ticket {
  id          String    @id @default(uuid())
  name        String
  email       String
  description String
  status      TicketStatus
  comments    Comment[]
}

model Comment {
  id        String @id @default(uuid())
  comment   String
  ticketId  String
  ticket    Ticket @relation(fields: [ticketId], references: [id])
}

enum TicketStatus {
  NEW
  IN_PROGRESS
  RESOLVED
}